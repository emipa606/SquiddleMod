<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseSquiddle">
    <defName>ShadowSquiddle</defName>
    <label>Shadow Squiddle</label>
    <description>The Shadow Squiddle is a small black squiddle that lives in tropical swamps. They hunt fish and have a toxic bite. Like all Squiddles they are "milked" for their ink.</description>
    <tools>
      <li>
        <label>squiddle venom</label>
        <capacities>
          <li>SquiddleVenom</li>
        </capacities>
        <power>3</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>7</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>3.4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>TentacleClub</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Cut</li>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>8</power>
        <cooldownTime>8</cooldownTime>
        <linkedBodyPartsGroup>TentacleSpike</linkedBodyPartsGroup>
      </li>
    </tools>
    <statBases>
      <MoveSpeed>1.75</MoveSpeed>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
      <MarketValue>200</MarketValue>
    </statBases>
    <race>
      <useMeatFrom>Squiddle</useMeatFrom>
      <baseBodySize>0.4</baseBodySize>
      <baseHealthScale>2.0</baseHealthScale>
      <wildBiomes>
        <TropicalSwamp>1</TropicalSwamp>
      </wildBiomes>
    </race>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>SquiddleInk</milkDef>
        <milkIntervalDays>2</milkIntervalDays>
        <milkAmount>7</milkAmount>
        <milkFemaleOnly>false</milkFemaleOnly>
      </li>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>EggShadowSquiddleFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>20</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1~3</eggCountRange>
      </li>
    </comps>
    <tradeTags>
      <li>AnimalCommon</li>
    </tradeTags>
  </ThingDef>
</Defs>
